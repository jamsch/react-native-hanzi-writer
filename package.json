{
  "name": "@jamsch/react-native-hanzi-writer",
  "version": "1.2.0",
  "description": "Hanzi/Kanji writer and stroke order quizzer library for React Native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!lib/typescript/example",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "prepack": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn install"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/jamsch/react-native-hanzi-writer",
  "author": "jamsch <12927717+jamsch@users.noreply.github.com> (https://github.com/jamsch)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamsch/react-native-hanzi-writer/issues"
  },
  "homepage": "https://github.com/jamsch/react-native-hanzi-writer#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/parse-path": "^7.0.0",
    "@types/react": "~19.2.2",
    "@types/use-sync-external-store": "^1.5.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "react": "19.2.0",
    "react-native": "0.82.1",
    "react-native-builder-bob": "^0.40.14",
    "react-native-gesture-handler": "~2.29.1",
    "react-native-reanimated": "~4.1.3",
    "react-native-svg": "15.14.0",
    "react-native-worklets": "0.5.2",
    "release-it": "^19.0.5",
    "typescript": "~5.9.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": ">=2.28.0",
    "react-native-reanimated": ">=4.0",
    "react-native-svg": ">=15.0.0",
    "react-native-worklets": ">=0.5.0"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true,
      "host": "github.com",
      "tokenRef": "GITHUB_JAMSCH_TOKEN"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "use-sync-external-store": "^1.2.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
